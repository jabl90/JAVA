package com.jose;
/*- Crea un proyecto que se llame Amigos
- Crea un modelo para Amigo con los campos: id:int, nombre:String,
email:String, edad:int, viveCerca:boolean, misamigos:Amigo[]
- Crea una clase ejecutable "Principal"
- En esta clase crea un amigo "pepe" que debe tener a 
su vez otros amigos: "juan, petra, luisa, lola"
- Haz que para pepe, se muestre por consola la información de cada uno de sus amigos,
 uno por linea. La información a mostrar debe ser por ejemplo:
  "Juan (juan@e.es) 23 años, vive lejos"*/

import java.util.ArrayList;

import com.jose.ModeloAmigo; //Importamos la clase modelo amigo para poder acceder a sus atributos

public class Principal {

	public static void main(String[] args) {

		// Creamos un amigo que se llama Pepe a partir de la clase ModeloAmigo
		
	
		ModeloAmigo pepe = new ModeloAmigo(12,"pepe","pepito92@gmail.com",28,true);
		
		ModeloAmigo juan = new ModeloAmigo(13,"juan","juanito90@gmail.com",26,true);
		ModeloAmigo petra = new ModeloAmigo(14,"petra","petrahg@gmail.com",24,false);
		ModeloAmigo luisa = new ModeloAmigo(15,"luisa","luisita2@gmail.com",23,true);
		ModeloAmigo lola = new ModeloAmigo(16,"lola","lolita2@gmail.com",29,false);
		
		//con el ArrayList se pdorían añadir neuvos amigos
		
		ArrayList<ModeloAmigo> amigosPepe=new ArrayList<ModeloAmigo>(); //asignacion de amigos de pepe
		amigosPepe.add(juan);
		amigosPepe.add(petra);
		amigosPepe.add(luisa);
		amigosPepe.add(lola);
		pepe.setMisamigos(amigosPepe);

		System.out.println(pepe.showinfo());
	}

}
